@{
    ViewData["Title"] = "Access Denied";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card-custom p-5">
                <i class="fas fa-ban fa-5x text-danger mb-4"></i>
                <h1 class="display-4 fw-bold mb-3">Access Denied</h1>
                <p class="lead text-secondary mb-4">
                    You don't have permission to access this resource.
                </p>
                <p class="text-muted mb-4">
                    If you believe this is an error, please contact the administrator or try logging in with appropriate credentials.
                </p>
                <div class="d-flex gap-3 justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary-custom">
                        <i class="fas fa-home me-2"></i>Go Home
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-secondary">
                        <i class="fas fa-sign-in-alt me-2"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>