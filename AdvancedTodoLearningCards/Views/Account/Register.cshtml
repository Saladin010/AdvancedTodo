@model AdvancedTodoLearningCards.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card-custom shadow-custom">
                <div class="card-header-gradient text-center">
                    <h2 class="mb-0">
                        <i class="fas fa-user-plus me-2"></i>
                        Create Account
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label-custom">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input asp-for="Username" class="form-control form-control-custom" placeholder="Choose a username" />
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label-custom">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="your@email.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label-custom">
                                <i class="fas fa-lock me-2"></i>Password
                            </label>
                            <input asp-for="Password" class="form-control form-control-custom" placeholder="Min 6 characters" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label-custom">
                                <i class="fas fa-lock me-2"></i>Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-custom" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-secondary-custom w-100 mb-3">
                            <i class="fas fa-user-plus me-2"></i>Create Account
                        </button>

                        <div class="text-center">
                            <p class="text-secondary mb-0">
                                Already have an account?
                                <a asp-action="Login" class="text-decoration-none fw-bold" style="color: var(--secondary-color);">
                                    Login here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}