@model AdvancedTodoLearningCards.ViewModels.CardViewModel

@{
    ViewData["Title"] = "Card Details";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-custom shadow-custom">
                <div class="card-header-gradient">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">
                            <i class="fas fa-info-circle me-2"></i>
                            Card Details
                        </h2>
                        <span class="badge badge-custom badge-@Model.Difficulty.ToString().ToLower()">
                            @Model.Difficulty
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">

                    <div class="mb-4">
                        <h3 class="fw-bold mb-3">@Model.Title</h3>

                        @if (Model.Tags.Any())
                        {
                            <div class="mb-3">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="tag">@tag</span>
                                }
                            </div>
                        }
                    </div>

                    <div class="mb-4">
                        <h5 class="text-secondary mb-2">Content / Answer:</h5>
                        <div class="bg-light p-3 rounded">
                            <p class="mb-0" style="white-space: pre-wrap;">@Model.Content</p>
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <div class="stats-card">
                                <small class="text-muted d-block mb-1">Reviews Completed</small>
                                <h4 class="mb-0 text-gradient-primary">@Model.ReviewCount</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="stats-card">
                                <small class="text-muted d-block mb-1">Next Review</small>
                                <h4 class="mb-0" style="color: var(--secondary-color);">
                                    @if (Model.NextReviewAt.HasValue)
                                    {
                                        @Model.NextReviewAt.Value.ToString("MMM dd, yyyy")
                                    }
                                    else
                                    {
                                        <span>Not scheduled</span>
                                    }
                                </h4>
                            </div>
                        </div>
                        @if (Model.IntervalDays.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="stats-card">
                                    <small class="text-muted d-block mb-1">Current Interval</small>
                                    <h4 class="mb-0 text-success">@Model.IntervalDays days</h4>
                                </div>
                            </div>
                        }
                        @if (Model.EaseFactor.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="stats-card">
                                    <small class="text-muted d-block mb-1">Ease Factor</small>
                                    <h4 class="mb-0 text-warning">@Model.EaseFactor.Value.ToString("F2")</h4>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>
                            Created: @Model.CreatedAt.ToString("MMMM dd, yyyy")
                        </small>
                    </div>

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary-custom flex-fill">
                            <i class="fas fa-edit me-2"></i>Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger flex-fill">
                            <i class="fas fa-trash me-2"></i>Delete
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                            <i class="fas fa-arrow-left me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>