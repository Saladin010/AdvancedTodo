@model AdvancedTodoLearningCards.ViewModels.CreateCardViewModel

@{
    ViewData["Title"] = "Create Card";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-custom shadow-custom">
                <div class="card-header-gradient">
                    <h2 class="mb-0">
                        <i class="fas fa-plus-circle me-2"></i>
                        Create New Learning Card
                    </h2>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="Title" class="form-label-custom">
                                <i class="fas fa-heading me-2"></i>Card Title / Question
                            </label>
                            <input asp-for="Title" class="form-control form-control-custom"
                                   placeholder="e.g., What is the SM-2 algorithm?" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Content" class="form-label-custom">
                                <i class="fas fa-align-left me-2"></i>Card Content / Answer
                            </label>
                            <textarea asp-for="Content" class="form-control form-control-custom"
                                      rows="6" placeholder="Write the answer or explanation..."></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="TagsString" class="form-label-custom">
                                <i class="fas fa-tags me-2"></i>Tags (comma-separated)
                            </label>
                            <input asp-for="TagsString" class="form-control form-control-custom"
                                   placeholder="e.g., Algorithm, Learning, Memory" />
                            <span asp-validation-for="TagsString" class="text-danger"></span>
                            <small class="form-text text-muted">Separate tags with commas</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Difficulty" class="form-label-custom">
                                <i class="fas fa-sliders-h me-2"></i>Difficulty Level
                            </label>
                            <select asp-for="Difficulty" class="form-select form-control-custom">
                                <option value="0">Easy</option>
                                <option value="1" selected>Medium</option>
                                <option value="2">Hard</option>
                            </select>
                            <span asp-validation-for="Difficulty" class="text-danger"></span>
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-primary-custom flex-fill">
                                <i class="fas fa-save me-2"></i>Create Card
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}