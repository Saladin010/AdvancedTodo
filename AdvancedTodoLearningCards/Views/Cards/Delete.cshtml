@model AdvancedTodoLearningCards.ViewModels.CardViewModel

@{
    ViewData["Title"] = "Delete Card";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-custom shadow-custom">
                <div class="card-header-gradient bg-danger">
                    <h2 class="mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Delete Card
                    </h2>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning!</strong> This action cannot be undone. All review history for this card will be permanently deleted.
                    </div>

                    <h4 class="fw-bold mb-3">Are you sure you want to delete this card?</h4>

                    <div class="bg-light p-4 rounded mb-4">
                        <h5 class="fw-bold mb-2">@Model.Title</h5>

                        @if (Model.Tags.Any())
                        {
                            <div class="mb-2">
                                @foreach (var tag in Model.Tags)
                                {
                                    <span class="tag">@tag</span>
                                }
                            </div>
                        }

                        <p class="mb-2" style="white-space: pre-wrap;">
                            @(Model.Content.Length > 150 ? Model.Content.Substring(0, 150) + "..." : Model.Content)
                        </p>

                        <div class="mt-3">
                            <small class="text-muted">
                                <i class="fas fa-sync-alt me-1"></i>
                                <strong>@Model.ReviewCount</strong> reviews completed
                            </small>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-danger flex-fill">
                                <i class="fas fa-trash-alt me-2"></i>Yes, Delete Card
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary flex-fill">
                                <i class="fas fa-times me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>