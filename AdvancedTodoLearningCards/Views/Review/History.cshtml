@model IEnumerable<AdvancedTodoLearningCards.Models.ReviewLog>

@{
    ViewData["Title"] = "Review History";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="fas fa-history me-2"></i>
            Review History
        </h1>
        <a asp-controller="Dashboard" asp-action="ExportCsv" class="btn btn-outline-secondary">
            <i class="fas fa-download me-2"></i>Export CSV
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="card-custom">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Date & Time</th>
                                <th>Card</th>
                                <th>Quality</th>
                                <th>Interval Change</th>
                                <th>EF Change</th>
                                <th>Time Spent</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="fas fa-calendar me-1 text-muted"></i>
                                        @log.ReviewedAt.ToString("MMM dd, yyyy")
                                        <br>
                                        <small class="text-muted">@log.ReviewedAt.ToString("HH:mm")</small>
                                    </td>
                                    <td>
                                        <strong>@log.Card.Title</strong>
                                    </td>
                                    <td>
                                        @{
                                            var qualityBadge = log.Quality switch
                                            {
                                                5 => "bg-success",
                                                4 => "bg-primary",
                                                3 => "bg-info",
                                                2 => "bg-warning",
                                                _ => "bg-danger"
                                            };
                                            var qualityText = log.Quality switch
                                            {
                                                5 => "Perfect",
                                                4 => "Good",
                                                3 => "OK",
                                                2 => "Hard",
                                                1 => "Again",
                                                _ => "Failed"
                                            };
                                        }
                                        <span class="badge @qualityBadge">
                                            @qualityText (@log.Quality)
                                        </span>
                                    </td>
                                    <td>
                                        @if (log.IntervalAfter > log.IntervalBefore)
                                        {
                                            <span class="text-success">
                                                <i class="fas fa-arrow-up me-1"></i>
                                                @log.IntervalBefore → @log.IntervalAfter days
                                            </span>
                                        }
                                        else if (log.IntervalAfter < log.IntervalBefore)
                                        {
                                            <span class="text-danger">
                                                <i class="fas fa-arrow-down me-1"></i>
                                                @log.IntervalBefore → @log.IntervalAfter days
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-minus me-1"></i>
                                                @log.IntervalBefore days
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.EaseFactorAfter > log.EaseFactorBefore)
                                        {
                                            <span class="text-success">
                                                <i class="fas fa-arrow-up me-1"></i>
                                                @log.EaseFactorBefore.ToString("F2") → @log.EaseFactorAfter.ToString("F2")
                                            </span>
                                        }
                                        else if (log.EaseFactorAfter < log.EaseFactorBefore)
                                        {
                                            <span class="text-danger">
                                                <i class="fas fa-arrow-down me-1"></i>
                                                @log.EaseFactorBefore.ToString("F2") → @log.EaseFactorAfter.ToString("F2")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">
                                                @log.EaseFactorBefore.ToString("F2")
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (log.TimeSpentSeconds.HasValue)
                                        {
                                            <span class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @TimeSpan.FromSeconds(log.TimeSpentSeconds.Value).ToString(@"mm\:ss")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Summary Stats -->
        <div class="row g-3 mt-4">
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-center">
                        <h3 class="stats-value">@Model.Count()</h3>
                        <div class="stats-label">Total Reviews</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-center">
                        <h3 class="stats-value" style="color: var(--success-color);">
                            @Model.Count(r => r.Quality >= 3)
                        </h3>
                        <div class="stats-label">Successful</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-center">
                        <h3 class="stats-value" style="color: var(--primary-color);">
                            @Model.Average(r => r.Quality).ToString("F1")
                        </h3>
                        <div class="stats-label">Avg Quality</div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="stats-card">
                    <div class="text-center">
                        <h3 class="stats-value" style="color: var(--secondary-color);">
                            @((int)Model.Average(r => r.IntervalAfter))
                        </h3>
                        <div class="stats-label">Avg Interval</div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
            <h3 class="text-muted">No review history yet</h3>
            <p class="text-secondary mb-4">Start reviewing your cards to see your progress here!</p>
            <a asp-action="Session" class="btn btn-primary-custom">
                <i class="fas fa-graduation-cap me-2"></i>Start First Review
            </a>
        </div>
    }
</div>