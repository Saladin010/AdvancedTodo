@model AdvancedTodoLearningCards.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="fw-bold">
            <i class="fas fa-chart-line me-2"></i>
            Dashboard
        </h1>
        <div>
            <a asp-controller="Review" asp-action="Session" class="btn btn-primary-custom">
                <i class="fas fa-graduation-cap me-2"></i>Start Review
            </a>
            <a asp-controller="Cards" asp-action="Create" class="btn btn-secondary-custom">
                <i class="fas fa-plus me-2"></i>New Card
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stats-card fade-in">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-value">@Model.TotalCards</div>
                        <div class="stats-label">Total Cards</div>
                    </div>
                    <i class="fas fa-layer-group fa-2x" style="color: var(--primary-color); opacity: 0.2;"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stats-card fade-in" style="animation-delay: 0.1s;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-value" style="background: var(--gradient-secondary); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">
                            @Model.DueToday
                        </div>
                        <div class="stats-label">Due Today</div>
                    </div>
                    <i class="fas fa-clock fa-2x" style="color: var(--secondary-color); opacity: 0.2;"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stats-card fade-in" style="animation-delay: 0.2s;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-value" style="color: var(--success-color);">
                            @Model.RetentionRate.ToString("F1")%
                        </div>
                        <div class="stats-label">Retention Rate</div>
                    </div>
                    <i class="fas fa-check-circle fa-2x" style="color: var(--success-color); opacity: 0.2;"></i>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="stats-card fade-in" style="animation-delay: 0.3s;">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="stats-value" style="color: var(--warning-color);">
                            @Model.CurrentStreak
                        </div>
                        <div class="stats-label">Day Streak</div>
                    </div>
                    <i class="fas fa-fire fa-2x" style="color: var(--warning-color); opacity: 0.2;"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="row g-4 mb-4">
        <div class="col-lg-8">
            <div class="card-custom p-4">
                <h4 class="fw-bold mb-3">
                    <i class="fas fa-chart-line me-2"></i>Reviews Over Time (Last 30 Days)
                </h4>
                <div class="chart-container">
                    <canvas id="reviewsChart"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card-custom p-4">
                <h4 class="fw-bold mb-3">
                    <i class="fas fa-pie-chart me-2"></i>Difficulty Distribution
                </h4>
                <div class="chart-container" style="height: 250px;">
                    <canvas id="difficultyChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Reviews -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card-custom p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="fw-bold mb-0">
                        <i class="fas fa-calendar-alt me-2"></i>Upcoming Reviews
                    </h4>
                    <a asp-controller="Review" asp-action="Upcoming" class="btn btn-sm btn-outline-primary">
                        View All
                    </a>
                </div>

                @if (Model.UpcomingReviews.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Card</th>
                                    <th>Next Review</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var review in Model.UpcomingReviews)
                                {
                                    <tr>
                                        <td>
                                            <strong>@review.Title</strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-clock me-1"></i>
                                            @review.NextReviewAt.ToString("MMM dd, HH:mm")
                                        </td>
                                        <td>
                                            <span class="badge badge-custom bg-info">
                                                @review.RelativeTime
                                            </span>
                                        </td>
                                        <td>
                                            <a asp-controller="Cards" asp-action="Details" asp-route-id="@review.CardId"
                                               class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4 text-muted">
                        <i class="fas fa-check-circle fa-3x mb-3"></i>
                        <p>No upcoming reviews. Great job staying on track!</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Reviews Over Time Chart
        const reviewsCtx = document.getElementById('reviewsChart').getContext('2d');
        new Chart(reviewsCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.ReviewsOverTime.Labels)),
                datasets: [{
                    label: 'Reviews',
                    data: @Html.Raw(Json.Serialize(Model.ReviewsOverTime.Data)),
                    borderColor: '#7C3AED',
                    backgroundColor: 'rgba(124, 58, 237, 0.1)',
                    borderWidth: 3,
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });

        // Difficulty Distribution Chart
        const difficultyCtx = document.getElementById('difficultyChart').getContext('2d');
        new Chart(difficultyCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(Model.DifficultyDistribution.Keys)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(Model.DifficultyDistribution.Values)),
                    backgroundColor: ['#10B981', '#F59E0B', '#EF4444'],
                    borderWidth: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
}